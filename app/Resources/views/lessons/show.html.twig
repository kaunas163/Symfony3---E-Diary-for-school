{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lessons</h1>

    <table>
        <tbody>
            <tr>
                <th>Datetime</th>
                <td>{% if lesson.datetime %}{{ lesson.datetime|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ lesson.comment }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ lesson.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('lessons_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('lessons_edit', { 'id': lesson.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
