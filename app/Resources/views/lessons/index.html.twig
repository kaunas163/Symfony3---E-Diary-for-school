{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lessons list</h1>

    <table>
        <thead>
            <tr>
                <th>Datetime</th>
                <th>Comment</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lesson in lessons %}
            <tr>
                <td><a href="{{ path('lessons_show', { 'id': lesson.id }) }}">{{ lesson.datetime }}</a></td>
                <td>{{ lesson.comment }}</td>
                <td>{{ lesson.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('lessons_show', { 'id': lesson.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('lessons_edit', { 'id': lesson.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('lessons_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
