{% extends 'base.html.twig' %}

{% block body %}
    <h1>Klasių sąrašas</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Data ir laikas</th>
                <th>Komentaras</th>
                <th>Mokytojas</th>
                <th>Veiksmai</th>
            </tr>
        </thead>
        <tbody>
        {% for lesson in lessons %}
            <tr>
                <td><a href="{{ path('lessons_show', { 'id': lesson.id }) }}">{{ lesson.datetime|date('Y-m-d | H:i') }}</a></td>
                <td>{{ lesson.comment }}</td>
                <td>{{ lesson.teacher }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('lessons_show', { 'id': lesson.id }) }}">Rodyti</a>
                        </li>
                        <li>
                            <a href="{{ path('lessons_edit', { 'id': lesson.id }) }}">Redaguoti</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('lessons_new') }}">Naujas</a>
        </li>
    </ul>
{% endblock %}
