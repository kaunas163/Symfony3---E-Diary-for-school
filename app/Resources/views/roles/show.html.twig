{% extends 'base.html.twig' %}

{% block body %}
    <h1>Rolė</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Pavadinimas</th>
                <td>{{ role.title }}</td>
            </tr>
            <tr>
                <th>Aprašymas</th>
                <td>{{ role.description }}</td>
            </tr>
            <tr>
                <th>Puslapiai</th>
                <td>{{ role.pages }}</td>
            </tr>
            <tr>
                <th>Kursai</th>
                <td>{{ role.courses }}</td>
            </tr>
            <tr>
                <th>Pamokos</th>
                <td>{{ role.lessons }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('roles_index') }}">Grįžti į sąrašą</a>
        </li>
        <li>
            <a href="{{ path('roles_edit', { 'id': role.id }) }}">Redaguoti</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Ištrinti">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
