{% extends 'base.html.twig' %}

{% block body %}
    <h1>Pages</h1>

    <table>
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ page.title }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ page.text }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ page.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('pages_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('pages_edit', { 'id': page.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
