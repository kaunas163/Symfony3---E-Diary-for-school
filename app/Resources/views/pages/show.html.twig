{% extends 'base.html.twig' %}

{% block body %}
    <h1>Puslapis</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Pavadinimas</th>
                <td>{{ page.title }}</td>
            </tr>
            <tr>
                <th>Tekstas</th>
                <td>{{ page.text }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('pages_index') }}">Grįžti į sąrašą</a>
        </li>
        {% if is_granted('ROLE_ADMIN') %}
            <li>
                <a href="{{ path('pages_edit', { 'id': page.id }) }}">Redaguoti</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Ištrinti">
                {{ form_end(delete_form) }}
            </li>
        {% endif %}
    </ul>
{% endblock %}
