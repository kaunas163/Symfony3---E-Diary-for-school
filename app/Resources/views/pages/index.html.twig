{% extends 'base.html.twig' %}

{% block body %}
    <h1>Pages list</h1>

    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Text</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td><a href="{{ path('pages_show', { 'id': page.id }) }}">{{ page.title }}</a></td>
                <td>{{ page.text }}</td>
                <td>{{ page.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('pages_show', { 'id': page.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('pages_edit', { 'id': page.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('pages_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
