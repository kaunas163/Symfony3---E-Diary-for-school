{% extends 'base.html.twig' %}

{% block body %}
    <h1>Attendancies</h1>

    <table>
        <tbody>
            <tr>
                <th>Mark</th>
                <td>{{ attendancy.mark }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ attendancy.note }}</td>
            </tr>
            <tr>
                <th>Attended</th>
                <td>{% if attendancy.attended %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ attendancy.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('attendancies_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('attendancies_edit', { 'id': attendancy.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
