{% extends 'base.html.twig' %}

{% block body %}
    <h1>Vartotojai</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Vartotojas</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>El. pašto adresas</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Vaikas</th>
                <td>{{ user.child }}</td>
            </tr>
            <tr>
                <th>Rolė</th>
                <td>{{ user.roles[0] }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('users_index') }}">Grįžti į sąrašą</a>
        </li>
        <li>
            <a href="{{ path('users_edit', { 'id': user.id }) }}">Redaguoti</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Ištrinti">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
